

<%= render '/shared/flash' %>

<div id="trip-show">
  <div class="ui two column centered grid">
    <div class="column">

      <div id="trip-show">
        <h1><%= current_user.first_name%>'s Trips</h1>

        <div id="trip-buttons">

          <%= link_to 'Add New Trip', new_trip_path, class: 'ui purple button' %>
          <%= link_to 'View All locations', locations_path, class: 'ui green button' %>

        </div>
      </div>

      <div id="index-view" class='ui container'>



        <% if @trip.any? %>
        <% @trip.each do |trip| %>
        <div class="ui card">
          <div class="content card-top">
            <div class="right floated meta"><%= trip.days %> Days</div>
            <%= link_to trip.name, trip_path(trip) %>
          </div>
          <div class="image">
            <%= image_tag 'index_image.jpg' %>
          </div>
          <div class="content card-bottom">
            <span class="right floated">
              <i class="heart outline like icon"></i>
              <%= rand(1..21) %> Likes
            </span>
            <i class="remove from calendar icon"></i>
            <%= trip.season %>
          </div>
        </div>
        <% end %>
        <% else %>
        <h4>Create a trip!</h4>
        <% end %>


      </div>

    </div>

  </div>

</div>
