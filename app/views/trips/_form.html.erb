<div class="ui container center">
  <div class="ui medium form">
    <div class="three fields">
    <div class="field">
      <div class="ui inverted segment">
  <div class="ui inverted form">


<%= form_for @trip do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :days %>
  <%= f.text_field :days, required: true %>
  <%= f.label :season %>
  <%= f.select :season, ['Summer', 'Autumn', 'Winter', 'Spring'], required: true %>
  <%= f.submit %>
<% end %>
