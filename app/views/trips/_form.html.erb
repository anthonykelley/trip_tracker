

<%= form_for @trip do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :days %>
  <%= f.text_field :days, required: true %>
  <%= f.label :season %>
  <%= f.select :season, ['Summer', 'Autumn', 'Winter', 'Spring'], required: true %>
  <%= f.submit %>
<% end %>
