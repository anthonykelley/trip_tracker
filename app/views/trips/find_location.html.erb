
<div id="location-main" class="ui container">
    <div id="center" class"ui center aligned page grid ">
      <h1>Pick your location</h1>

      <div id="but-contain" class="ui two buttons">
        <%= link_to "Back to Trips", trips_path, class: 'ui green button' %>
        <%= link_to "Create New location", new_location_path(@location), class: 'ui purple blue button' %>
      </div>

      <%= will_paginate @locations %>
      <div class="locations-all">
          <div class="ui cards">
            <% @locations.each do |local| %>


            <div class="card">
              <div class="content">
                <div class="header">
                  <%=link_to local.name, location_path(local) %>
                </div>

                <div class="description">
                  <%= local.country %>
                </div>
                <div class="description">
                  <%= local.address %>
                </div>
                <div class="description">
                  <%= local.description %>
                </div>
              </div>
              <div class="extra content">
                <%= link_to 'Add This Location', add_location_path(@trip, local), method: :patch, class: "ui basic green button" %>
              </div>
            </div>
            <% end %>
          </div>

      </div>

      <%= will_paginate @locations %>

    </div>
  </div>
